<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <title>QQ 支付二维码生成</title>
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont;
      padding: 24px;
      max-width: 900px;
      margin: auto;
    }

    textarea {
      width: 100%;
      height: 260px;
      font-family: monospace;
      font-size: 14px;
      padding: 12px;
      box-sizing: border-box;
    }

    button {
      margin-top: 12px;
      padding: 10px 18px;
      font-size: 16px;
      cursor: pointer;
    }

    .result {
      margin-top: 24px;
      text-align: center;
    }

    img {
      margin-top: 16px;
      border: 1px solid #ddd;
    }

    .error {
      color: red;
      margin-top: 12px;
    }
  </style>
</head>
<body>

<h2>支付 JSON → 二维码</h2>

<textarea id="jsonInput">
{
  "ret": 0,
  "info": {
    "channel_info": {
      "token": "6M9aeeae863b4f6cfa3ae760ef571f99"
    }
  }
}
</textarea>

<br />
<button onclick="generate()">生成二维码</button>

<div class="result">
  <div id="error" class="error"></div>
  <img id="qrcode" />
</div>

<script>
  async function generate() {
    const input = document.getElementById("jsonInput").value;
    const errorEl = document.getElementById("error");
    const img = document.getElementById("qrcode");

    errorEl.textContent = "";
    img.src = "";

    let json;
    try {
      json = JSON.parse(input);
    } catch (e) {
      errorEl.textContent = "JSON 格式错误";
      return;
    }

    const res = await fetch("/qrcode", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify(json)
    });

    if (!res.ok) {
      const text = await res.text();
      errorEl.textContent = text;
      return;
    }

    const blob = await res.blob();
    img.src = URL.createObjectURL(blob);
  }
</script>

</body>
</html>
